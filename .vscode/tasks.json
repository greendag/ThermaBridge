{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Check LittleFS sync",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "${workspaceFolder}/scripts/check_littlefs_sync.py"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Upload LittleFS (uploadfs)",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "platformio",
                "run",
                "-t",
                "uploadfs"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
